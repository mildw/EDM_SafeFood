result-view {
	match{
		Food(this) {
			min (Required)
		}
	}
	
	render {
		if(size(this) > 1) {
			list-of (this) {
				where-each (food) {
					layout-macro (food_list_macro) {
						param (food) {
							expression (food)
						}
					}
				}
			}
		}
		
		else-if ("size(this) == 1") {
			layout-match (this) {
				mode (Details)
			}
		}
	}
}