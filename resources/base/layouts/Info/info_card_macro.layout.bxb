layout-macro-def(info_card_macro) {
	params {
		param (infoResult) {
			type (InfoResult)
			min (Required)
			max (One)
		}
	}
	
	content {
		compound-card {
			content {
				image-card {
					aspect-ratio (4:3)
					image-url ("#{value(infoResult.imgurl1)}")
					title-area {
						halign (Start)
						slot1 {
							text {
								value ("")
								style (Title_M)
							}
						}
					}
				}
				single-line {
					text {
						value {
							template ("#{value(infoResult.prdlstNm)}")
						}
						style (Title_M)
					}
				}
				paragraph {
					value {
						template ("#{value(infoResult.productGb)}")
					}
					style (Detail_L)
				}
				// single-line {
				//   text {
				//     value {
				//       template ("#{value(flower.deliveryType)}")
				//     }
				//     style (Detail_M_Soft)
				//   }
				// }
			}
		}
	}
}
