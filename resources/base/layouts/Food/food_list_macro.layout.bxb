layout-macro-def(food_list_macro) {
	params {
		param (food) {
			type (Food)
			min (Required)
			max (One)
		}
	}
	content {
		compound-card {
			// on-click {
			// 	intent {
			// 		goal: InfoDetail
			// 	}
			// }
			content {
				title-area {
					slot1 {
						text {
							value {
								template ("#{value (food.prdlstNm)}")
							}
						}
					}
				}
				cell-area {
					slot2 {
						content {
							primary {
								template ("#{value (food.allergy)}")
							}
						}
					}
				}
			}
		}
	}
}